{
    "manifest_version": 2,
    "name": "NextPage",
    "version": "1.0",
    "description": "Navigate to next/previous if page URL contains a Id as parameter.",
  
    "icons": {
        "48": "icons/right-48.png"
    },

    "permissions": [
        "activeTab",
        "tabs"
    ],

    "page_action": {
        "browser_style": true,
        "default_icon": {
            "32": "icons/right-32.png"
        },
        "default_title": "next page"
    },

    "background": {
        "scripts": ["background.js"]
    }
}